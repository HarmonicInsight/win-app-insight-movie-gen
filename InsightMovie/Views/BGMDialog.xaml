<Window x:Class="InsightMovie.Views.BGMDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BGM設定"
        MinWidth="500" MinHeight="600"
        Width="540" Height="640"
        WindowStartupLocation="CenterOwner"
        Background="#FF2D2D30"
        Foreground="White"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFD0D0D0"/>
            <Setter Property="Margin" Value="0,10,0,6"/>
        </Style>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFB0B0B0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="Background" Value="#FF383838"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Padding" Value="16,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#FF5A5A5A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF999999"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="SmallSpinButton" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="#FF5A5A5A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF999999"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- File Selection -->
                <TextBlock Text="ファイル選択" Style="{StaticResource SectionHeader}"/>
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <TextBlock Text="BGMファイル:" Style="{StaticResource FieldLabel}"/>
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="FilePathLabel" Grid.Column="0"
                                       Text="（未選択）"
                                       Foreground="#FF999999"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="0,0,8,0"/>
                            <Button x:Name="BrowseButton" Grid.Column="1"
                                    Content="参照..." Style="{StaticResource DialogButton}"
                                    MinWidth="70" Click="BrowseButton_Click"/>
                            <Button x:Name="ClearFileButton" Grid.Column="2"
                                    Content="クリア" Style="{StaticResource DialogButton}"
                                    MinWidth="60" Click="ClearFileButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Volume Settings -->
                <TextBlock Text="音量設定" Style="{StaticResource SectionHeader}"/>
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <!-- Main Volume -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="メイン音量:" Style="{StaticResource FieldLabel}"/>
                            <Slider x:Name="MainVolumeSlider" Grid.Column="1"
                                    Minimum="0" Maximum="100" Value="80"
                                    VerticalAlignment="Center"
                                    ValueChanged="MainVolumeSlider_ValueChanged"/>
                            <TextBlock x:Name="MainVolumeLabel" Grid.Column="2"
                                       Text="80%"
                                       Foreground="#FFB0B0B0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Ducking -->
                        <CheckBox x:Name="DuckingCheckBox" Content="ナレーション時にダッキング"
                                  Foreground="#FFB0B0B0" Margin="0,0,0,6"
                                  Checked="DuckingCheckBox_Changed"
                                  Unchecked="DuckingCheckBox_Changed"/>

                        <StackPanel x:Name="DuckingPanel" Margin="20,0,0,0" Visibility="Collapsed">
                            <!-- Ducking Volume -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ダッキング音量:" Style="{StaticResource FieldLabel}"/>
                                <Slider x:Name="DuckingVolumeSlider" Grid.Column="1"
                                        Minimum="0" Maximum="100" Value="20"
                                        VerticalAlignment="Center"
                                        ValueChanged="DuckingVolumeSlider_ValueChanged"/>
                                <TextBlock x:Name="DuckingVolumeLabel" Grid.Column="2"
                                           Text="20%"
                                           Foreground="#FFB0B0B0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Attack -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="アタック:" Style="{StaticResource FieldLabel}"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="-" Style="{StaticResource SmallSpinButton}"
                                            Click="AttackDown_Click"/>
                                    <TextBox x:Name="AttackTextBox" Width="50" Height="24"
                                             TextAlignment="Center" VerticalContentAlignment="Center"
                                             Background="#FF4A4A4A" Foreground="White"
                                             BorderBrush="#FF666666" Text="200"/>
                                    <Button Content="+" Style="{StaticResource SmallSpinButton}"
                                            Click="AttackUp_Click"/>
                                    <TextBlock Text="ms" Foreground="#FFB0B0B0"
                                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Release -->
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="リリース:" Style="{StaticResource FieldLabel}"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="-" Style="{StaticResource SmallSpinButton}"
                                            Click="ReleaseDown_Click"/>
                                    <TextBox x:Name="ReleaseTextBox" Width="50" Height="24"
                                             TextAlignment="Center" VerticalContentAlignment="Center"
                                             Background="#FF4A4A4A" Foreground="White"
                                             BorderBrush="#FF666666" Text="500"/>
                                    <Button Content="+" Style="{StaticResource SmallSpinButton}"
                                            Click="ReleaseUp_Click"/>
                                    <TextBlock Text="ms" Foreground="#FFB0B0B0"
                                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Fade Settings -->
                <TextBlock Text="フェード設定" Style="{StaticResource SectionHeader}"/>
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <!-- Fade In -->
                        <TextBlock Text="フェードイン" Foreground="#FFB0B0B0" FontWeight="SemiBold"
                                   Margin="0,0,0,4"/>
                        <StackPanel Margin="12,0,0,10">
                            <CheckBox x:Name="FadeInCheckBox" Content="有効"
                                      Foreground="#FFB0B0B0" Margin="0,0,0,4"
                                      Checked="FadeInCheckBox_Changed"
                                      Unchecked="FadeInCheckBox_Changed"/>
                            <StackPanel x:Name="FadeInPanel" Visibility="Collapsed">
                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="時間:" Style="{StaticResource FieldLabel}"
                                               MinWidth="60"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="-" Style="{StaticResource SmallSpinButton}"
                                                Click="FadeInDurationDown_Click"/>
                                        <TextBox x:Name="FadeInDurationTextBox" Width="50" Height="24"
                                                 TextAlignment="Center" VerticalContentAlignment="Center"
                                                 Background="#FF4A4A4A" Foreground="White"
                                                 BorderBrush="#FF666666" Text="2.0"/>
                                        <Button Content="+" Style="{StaticResource SmallSpinButton}"
                                                Click="FadeInDurationUp_Click"/>
                                        <TextBlock Text="秒" Foreground="#FFB0B0B0"
                                                   VerticalAlignment="Center" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="タイプ:" Style="{StaticResource FieldLabel}"
                                               MinWidth="60"/>
                                    <ComboBox x:Name="FadeInTypeCombo" Grid.Column="1"
                                              Width="140" HorizontalAlignment="Left"
                                              Background="#FF3C3C3C" Foreground="Black">
                                        <ComboBoxItem Content="Linear" IsSelected="True"/>
                                        <ComboBoxItem Content="Exponential"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                        <!-- Fade Out -->
                        <TextBlock Text="フェードアウト" Foreground="#FFB0B0B0" FontWeight="SemiBold"
                                   Margin="0,0,0,4"/>
                        <StackPanel Margin="12,0,0,4">
                            <CheckBox x:Name="FadeOutCheckBox" Content="有効"
                                      Foreground="#FFB0B0B0" Margin="0,0,0,4"
                                      Checked="FadeOutCheckBox_Changed"
                                      Unchecked="FadeOutCheckBox_Changed"/>
                            <StackPanel x:Name="FadeOutPanel" Visibility="Collapsed">
                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="時間:" Style="{StaticResource FieldLabel}"
                                               MinWidth="60"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="-" Style="{StaticResource SmallSpinButton}"
                                                Click="FadeOutDurationDown_Click"/>
                                        <TextBox x:Name="FadeOutDurationTextBox" Width="50" Height="24"
                                                 TextAlignment="Center" VerticalContentAlignment="Center"
                                                 Background="#FF4A4A4A" Foreground="White"
                                                 BorderBrush="#FF666666" Text="3.0"/>
                                        <Button Content="+" Style="{StaticResource SmallSpinButton}"
                                                Click="FadeOutDurationUp_Click"/>
                                        <TextBlock Text="秒" Foreground="#FFB0B0B0"
                                                   VerticalAlignment="Center" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="タイプ:" Style="{StaticResource FieldLabel}"
                                               MinWidth="60"/>
                                    <ComboBox x:Name="FadeOutTypeCombo" Grid.Column="1"
                                              Width="140" HorizontalAlignment="Left"
                                              Background="#FF3C3C3C" Foreground="Black">
                                        <ComboBoxItem Content="Linear" IsSelected="True"/>
                                        <ComboBoxItem Content="Exponential"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Loop Setting -->
                <Border Style="{StaticResource SectionBorder}">
                    <CheckBox x:Name="LoopCheckBox" Content="ループ再生" Foreground="#FFB0B0B0"
                              IsChecked="True"/>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- OK / Cancel Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Style="{StaticResource DialogButton}"
                    IsDefault="True" Click="OkButton_Click"/>
            <Button Content="キャンセル" Style="{StaticResource DialogButton}"
                    IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
