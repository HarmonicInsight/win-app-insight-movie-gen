<Window x:Class="InsightMovie.Views.PreviewPlayerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="プレビュー再生"
        MinWidth="800" MinHeight="600"
        Width="960" Height="720"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E"
        Foreground="White"
        ResizeMode="CanResizeWithGrip"
        Closing="Window_Closing">

    <Window.Resources>
        <Style x:Key="TransportButton" TargetType="Button">
            <Setter Property="MinWidth" Value="44"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#FF3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="PlayButton" TargetType="Button" BasedOn="{StaticResource TransportButton}">
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="BorderBrush" Value="#FF005FA3"/>
        </Style>
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#FF3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Video Area -->
        <Border Grid.Row="0" Background="Black">
            <MediaElement x:Name="MediaPlayer"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop"
                          Stretch="Uniform"
                          MediaOpened="MediaPlayer_MediaOpened"
                          MediaEnded="MediaPlayer_MediaEnded"
                          MediaFailed="MediaPlayer_MediaFailed"/>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" Background="#FF2B2B2B" Padding="12,8">
            <StackPanel>

                <!-- Seek Bar Row -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="CurrentTimeLabel" Grid.Column="0"
                               Text="00:00" Foreground="#FFB0B0B0"
                               FontSize="12" FontFamily="Consolas"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <Slider x:Name="SeekSlider" Grid.Column="1"
                            Minimum="0" Maximum="100" Value="0"
                            VerticalAlignment="Center"
                            Margin="8,0"
                            PreviewMouseLeftButtonDown="SeekSlider_PreviewMouseDown"
                            PreviewMouseLeftButtonUp="SeekSlider_PreviewMouseUp"
                            ValueChanged="SeekSlider_ValueChanged"/>

                    <TextBlock x:Name="TotalTimeLabel" Grid.Column="2"
                               Text="00:00" Foreground="#FFB0B0B0"
                               FontSize="12" FontFamily="Consolas"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>

                <!-- Transport Controls Row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Transport Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="PrevSceneBtn" Content="&#x25C0;&#x25C0;前"
                                Style="{StaticResource TransportButton}"
                                Click="PrevSceneBtn_Click"
                                ToolTip="前のシーン"/>
                        <Button x:Name="Rewind10Btn" Content="&#x25C0;10秒"
                                Style="{StaticResource TransportButton}"
                                Click="Rewind10Btn_Click"
                                ToolTip="10秒戻す"/>
                        <Button x:Name="PlayPauseBtn" Content="&#x25B6; 再生"
                                Style="{StaticResource PlayButton}"
                                Click="PlayPauseBtn_Click"
                                ToolTip="再生/一時停止"/>
                        <Button x:Name="Forward10Btn" Content="10秒&#x25B6;"
                                Style="{StaticResource TransportButton}"
                                Click="Forward10Btn_Click"
                                ToolTip="10秒進める"/>
                        <Button x:Name="NextSceneBtn" Content="次&#x25B6;&#x25B6;"
                                Style="{StaticResource TransportButton}"
                                Click="NextSceneBtn_Click"
                                ToolTip="次のシーン"/>
                    </StackPanel>

                    <!-- Center: Scene Info -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock x:Name="SceneLabel" Text="シーン: 1/1"
                                   Foreground="#FFB0B0B0" FontSize="13"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Right: Volume, Speed, Close -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Volume -->
                        <TextBlock Text="&#x1F50A;" FontSize="14"
                                   Foreground="#FFB0B0B0" VerticalAlignment="Center"
                                   Margin="0,0,4,0"/>
                        <Slider x:Name="VolumeSlider" Width="80"
                                Minimum="0" Maximum="1" Value="0.8"
                                VerticalAlignment="Center"
                                ValueChanged="VolumeSlider_ValueChanged"/>

                        <!-- Speed -->
                        <TextBlock Text="速度:" Foreground="#FFB0B0B0"
                                   FontSize="12" VerticalAlignment="Center"
                                   Margin="12,0,4,0"/>
                        <ComboBox x:Name="SpeedComboBox" Width="65" Height="28"
                                  Background="#FF3C3C3C" Foreground="Black"
                                  VerticalContentAlignment="Center"
                                  SelectionChanged="SpeedComboBox_SelectionChanged">
                            <ComboBoxItem Content="0.5x" Tag="0.5"/>
                            <ComboBoxItem Content="1x" Tag="1" IsSelected="True"/>
                            <ComboBoxItem Content="1.5x" Tag="1.5"/>
                            <ComboBoxItem Content="2x" Tag="2"/>
                            <ComboBoxItem Content="4x" Tag="4"/>
                        </ComboBox>

                        <!-- Close -->
                        <Button Content="閉じる" Style="{StaticResource DialogButton}"
                                Margin="12,0,0,0"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>
