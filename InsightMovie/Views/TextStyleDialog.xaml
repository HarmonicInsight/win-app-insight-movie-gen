<Window x:Class="InsightMovie.Views.TextStyleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="字幕スタイル設定"
        MinWidth="600" MinHeight="700"
        Width="650" Height="780"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style x:Key="PresetButton" TargetType="Border">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="72"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
            <Setter Property="Background" Value="{DynamicResource BgSecondary}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="ColorButton" TargetType="Border">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Padding" Value="16,4"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="140"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Section: Preview -->
        <TextBlock Grid.Row="0" Text="プレビュー" Style="{StaticResource SectionHeader}"/>

        <Border Grid.Row="1" CornerRadius="6" Margin="0,0,0,8" ClipToBounds="True">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF1A1A2E" Offset="0"/>
                    <GradientStop Color="#FF16213E" Offset="0.5"/>
                    <GradientStop Color="#FF0F3460" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Viewbox Stretch="Uniform" Margin="16">
                <TextBlock x:Name="PreviewText"
                           Text="サンプル字幕テキスト"
                           FontSize="48"
                           FontWeight="Bold"
                           FontFamily="Yu Gothic UI"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock.Foreground>
                        <SolidColorBrush x:Name="PreviewTextBrush" Color="White"/>
                    </TextBlock.Foreground>
                    <TextBlock.Effect>
                        <DropShadowEffect x:Name="PreviewShadow"
                                          Color="Black"
                                          Direction="315"
                                          ShadowDepth="3"
                                          BlurRadius="4"
                                          Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Viewbox>
        </Border>

        <!-- Section: Preset Styles -->
        <TextBlock Grid.Row="2" Text="プリセットスタイル" Style="{StaticResource SectionHeader}"/>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="0,0,0,8">
            <StackPanel>
                <!-- Preset Grid -->
                <ItemsControl x:Name="PresetGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- Custom Settings -->
                <TextBlock Text="カスタム設定" Style="{StaticResource SectionHeader}" Margin="0,12,0,4"/>

                <Border Background="{DynamicResource BgCard}"
                        BorderBrush="{DynamicResource BorderDefault}"
                        BorderThickness="1"
                        CornerRadius="6" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <!-- Font Family -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="フォント:" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="FontComboBox" Grid.Column="1"
                                      SelectionChanged="FontComboBox_SelectionChanged"/>
                        </Grid>

                        <!-- Font Size -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="サイズ:" Style="{StaticResource FieldLabel}"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="SizeDownBtn" Content="-" Width="28" Height="28"
                                        Click="SizeDown_Click"/>
                                <TextBox x:Name="SizeTextBox" Width="50" Height="28"
                                         TextAlignment="Center" VerticalContentAlignment="Center"
                                         TextChanged="SizeTextBox_TextChanged"/>
                                <Button x:Name="SizeUpBtn" Content="+" Width="28" Height="28"
                                        Click="SizeUp_Click"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="pt" Style="{StaticResource FieldLabel}" Margin="4,0,0,0"/>
                        </Grid>

                        <!-- Text Color -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="文字色:" Style="{StaticResource FieldLabel}"/>
                            <WrapPanel x:Name="TextColorPanel" Grid.Column="1" Orientation="Horizontal"/>
                        </Grid>

                        <!-- Stroke Color -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="縁取り色:" Style="{StaticResource FieldLabel}"/>
                            <WrapPanel x:Name="StrokeColorPanel" Grid.Column="1" Orientation="Horizontal"/>
                        </Grid>

                        <!-- Stroke Width -->
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="縁取り幅:" Style="{StaticResource FieldLabel}"/>
                            <Slider x:Name="StrokeWidthSlider" Grid.Column="1"
                                    Minimum="0" Maximum="8" IsSnapToTickEnabled="True" TickFrequency="1"
                                    VerticalAlignment="Center"
                                    ValueChanged="StrokeWidthSlider_ValueChanged"/>
                            <TextBlock x:Name="StrokeWidthLabel" Grid.Column="2"
                                       Text="3" Foreground="{DynamicResource TextSecondary}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- OK / Cancel Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" Style="{StaticResource DialogButton}"
                    IsDefault="True" Click="OkButton_Click"/>
            <Button Content="キャンセル" Style="{StaticResource DialogButton}"
                    IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
