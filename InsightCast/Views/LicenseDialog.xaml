<Window x:Class="InsightCast.Views.LicenseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ライセンス管理"
        MinWidth="500" MinHeight="600"
        Width="560" Height="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,10,0,6"/>
        </Style>
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BgCard}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Padding" Value="16,4"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style x:Key="FeatureAvailable" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF059669"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        <Style x:Key="FeatureUnavailable" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextTertiary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">

            <!-- Current Plan -->
            <Border Style="{StaticResource SectionBorder}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="現在のプラン" Foreground="{DynamicResource TextSecondary}"
                               HorizontalAlignment="Center" FontSize="12" Margin="0,0,0,4"/>
                    <TextBlock x:Name="PlanLabel" Text="フリー"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{DynamicResource BrandPrimary}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,4"/>
                    <TextBlock x:Name="StatusLabel" Text=""
                               Foreground="{DynamicResource TextSecondary}" FontSize="12"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Features -->
            <TextBlock Text="機能一覧" Style="{StaticResource SectionHeader}"/>
            <Border Style="{StaticResource SectionBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="字幕機能"
                               FontSize="13" Margin="0,2"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="FeatureSubtitle" Grid.Row="0" Grid.Column="1"
                               Style="{StaticResource FeatureUnavailable}"
                               HorizontalAlignment="Right" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="字幕スタイル選択"
                               FontSize="13" Margin="0,2"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="FeatureSubtitleStyle" Grid.Row="1" Grid.Column="1"
                               Style="{StaticResource FeatureUnavailable}"
                               HorizontalAlignment="Right" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="トランジション効果"
                               FontSize="13" Margin="0,2"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="FeatureTransition" Grid.Row="2" Grid.Column="1"
                               Style="{StaticResource FeatureUnavailable}"
                               HorizontalAlignment="Right" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="PPTX取込"
                               FontSize="13" Margin="0,2"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="FeaturePptx" Grid.Row="3" Grid.Column="1"
                               Style="{StaticResource FeatureUnavailable}"
                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- License Activation -->
            <TextBlock Text="ライセンス認証" Style="{StaticResource SectionHeader}"/>
            <Border Style="{StaticResource SectionBorder}">
                <StackPanel>
                    <TextBlock Text="メールアドレス" FontSize="12"
                               Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,4"/>
                    <TextBox x:Name="EmailTextBox"
                             Height="32"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="6,0"/>

                    <TextBlock Text="ライセンスキー" FontSize="12"
                               Foreground="{DynamicResource TextSecondary}" Margin="0,8,0,4"/>
                    <TextBox x:Name="LicenseKeyTextBox"
                             Height="32"
                             FontSize="14"
                             FontFamily="Consolas"
                             VerticalContentAlignment="Center"
                             Padding="6,0"
                             Tag="INMV-PRO-2601-XXXX-XXXX-XXXX"/>
                    <!-- Placeholder watermark via Tag, applied in code-behind -->

                    <TextBlock x:Name="ValidationMessage" Text=""
                               Foreground="{DynamicResource Error}" FontSize="12"
                               Margin="0,6,0,0" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="アクティベート" Style="{StaticResource DialogButton}"
                                MinWidth="120" Click="ActivateButton_Click"/>
                        <Button Content="クリア" Style="{StaticResource DialogButton}"
                                MinWidth="70" Click="ClearButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>

        <!-- Close Button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="閉じる" Style="{StaticResource DialogButton}"
                    IsCancel="True" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
