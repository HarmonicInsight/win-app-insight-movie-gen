<Window x:Class="InsightCast.Views.PreviewPlayerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Preview.Title}"
        MinWidth="800" MinHeight="600"
        Width="960" Height="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Closing="Window_Closing">

    <Window.Resources>
        <Style x:Key="TransportButton" TargetType="Button">
            <Setter Property="MinWidth" Value="44"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style x:Key="PlayButton" TargetType="Button" BasedOn="{StaticResource TransportButton}">
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="{DynamicResource BrandPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BrandPrimary}"/>
        </Style>
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Video Area (keep dark for video content) -->
        <Border Grid.Row="0" Background="Black">
            <MediaElement x:Name="MediaPlayer"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop"
                          Stretch="Uniform"
                          MediaOpened="MediaPlayer_MediaOpened"
                          MediaEnded="MediaPlayer_MediaEnded"
                          MediaFailed="MediaPlayer_MediaFailed"/>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" Background="{DynamicResource BgSecondary}"
                BorderBrush="{DynamicResource BorderDefault}" BorderThickness="0,1,0,0"
                Padding="12,8">
            <StackPanel>

                <!-- Seek Bar Row -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="CurrentTimeLabel" Grid.Column="0"
                               Text="00:00" Foreground="{DynamicResource TextSecondary}"
                               FontSize="12" FontFamily="Consolas"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <Slider x:Name="SeekSlider" Grid.Column="1"
                            Minimum="0" Maximum="100" Value="0"
                            VerticalAlignment="Center"
                            Margin="8,0"
                            PreviewMouseLeftButtonDown="SeekSlider_PreviewMouseDown"
                            PreviewMouseLeftButtonUp="SeekSlider_PreviewMouseUp"
                            ValueChanged="SeekSlider_ValueChanged"/>

                    <TextBlock x:Name="TotalTimeLabel" Grid.Column="2"
                               Text="00:00" Foreground="{DynamicResource TextSecondary}"
                               FontSize="12" FontFamily="Consolas"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>

                <!-- Transport Controls Row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Transport Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="PrevSceneBtn" Content="{DynamicResource Preview.Prev}"
                                Style="{StaticResource TransportButton}"
                                Click="PrevSceneBtn_Click"
                                ToolTip="{DynamicResource Preview.Prev.Tooltip}"/>
                        <Button x:Name="Rewind10Btn" Content="{DynamicResource Preview.Rewind}"
                                Style="{StaticResource TransportButton}"
                                Click="Rewind10Btn_Click"
                                ToolTip="{DynamicResource Preview.Rewind.Tooltip}"/>
                        <Button x:Name="PlayPauseBtn" Content="{DynamicResource Preview.Play}"
                                Style="{StaticResource PlayButton}"
                                Click="PlayPauseBtn_Click"
                                ToolTip="{DynamicResource Preview.PlayPause.Tooltip}"/>
                        <Button x:Name="Forward10Btn" Content="{DynamicResource Preview.Forward}"
                                Style="{StaticResource TransportButton}"
                                Click="Forward10Btn_Click"
                                ToolTip="{DynamicResource Preview.Forward.Tooltip}"/>
                        <Button x:Name="NextSceneBtn" Content="{DynamicResource Preview.Next}"
                                Style="{StaticResource TransportButton}"
                                Click="NextSceneBtn_Click"
                                ToolTip="{DynamicResource Preview.Next.Tooltip}"/>
                    </StackPanel>

                    <!-- Center: Scene Info -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock x:Name="SceneLabel" Text="シーン: 1/1"
                                   Foreground="{DynamicResource TextSecondary}" FontSize="13"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Right: Volume, Speed, Close -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Volume -->
                        <TextBlock Text="&#x1F50A;" FontSize="14"
                                   Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center"
                                   Margin="0,0,4,0"/>
                        <Slider x:Name="VolumeSlider" Width="80"
                                Minimum="0" Maximum="1" Value="0.8"
                                VerticalAlignment="Center"
                                ValueChanged="VolumeSlider_ValueChanged"/>

                        <!-- Speed -->
                        <TextBlock Text="{DynamicResource Preview.Speed}" Foreground="{DynamicResource TextSecondary}"
                                   FontSize="12" VerticalAlignment="Center"
                                   Margin="12,0,4,0"/>
                        <ComboBox x:Name="SpeedComboBox" Width="65" Height="28"
                                  VerticalContentAlignment="Center"
                                  SelectionChanged="SpeedComboBox_SelectionChanged">
                            <ComboBoxItem Content="0.5x" Tag="0.5"/>
                            <ComboBoxItem Content="1x" Tag="1" IsSelected="True"/>
                            <ComboBoxItem Content="1.5x" Tag="1.5"/>
                            <ComboBoxItem Content="2x" Tag="2"/>
                            <ComboBoxItem Content="4x" Tag="4"/>
                        </ComboBox>

                        <!-- Close -->
                        <Button Content="{DynamicResource Common.Close}" Style="{StaticResource DialogButton}"
                                Margin="12,0,0,0"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>
