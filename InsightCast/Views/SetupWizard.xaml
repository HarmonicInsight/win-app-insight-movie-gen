<Window x:Class="InsightCast.Views.SetupWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Setup.Title}"
        MinWidth="700" MinHeight="500"
        Width="750" Height="530"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Button Style (Gold Primary) -->
        <Style x:Key="WizardButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource BrandPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource BrandHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource BgCard}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBorder}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SecondaryHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Text Style -->
        <Style x:Key="PageTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Subtitle Text Style -->
        <Style x:Key="PageSubtitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Body Text Style -->
        <Style x:Key="BodyText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="24"/>
        </Style>

        <!-- Status Label Style -->
        <Style x:Key="StatusLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Step indicator bar -->
            <RowDefinition Height="Auto"/>
            <!-- Page content -->
            <RowDefinition Height="*"/>
            <!-- Navigation buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Step Indicator -->
        <Border Grid.Row="0" Background="{DynamicResource BgSecondary}"
                BorderBrush="{DynamicResource BorderDefault}" BorderThickness="0,0,0,1"
                Padding="30,14">
            <StackPanel x:Name="StepIndicator" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="StepLabel1" Text="{DynamicResource Setup.Step1}" FontSize="13" Foreground="{DynamicResource BrandPrimary}" FontWeight="SemiBold" Margin="0,0,30,0"/>
                <TextBlock x:Name="StepLabel2" Text="{DynamicResource Setup.Step2}" FontSize="13" Foreground="{DynamicResource TextTertiary}" Margin="0,0,30,0"/>
                <TextBlock x:Name="StepLabel3" Text="{DynamicResource Setup.Step3}" FontSize="13" Foreground="{DynamicResource TextTertiary}" Margin="0,0,30,0"/>
                <TextBlock x:Name="StepLabel4" Text="{DynamicResource Setup.Step4}" FontSize="13" Foreground="{DynamicResource TextTertiary}"/>
            </StackPanel>
        </Border>

        <!-- TabControl with hidden tabs -->
        <TabControl x:Name="WizardPages" Grid.Row="1"
                    SelectedIndex="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>
            </TabControl.ItemContainerStyle>

            <!-- Page 1: Welcome -->
            <TabItem>
                <Border Padding="50,40">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{DynamicResource Setup.Welcome.Title}" Style="{StaticResource PageTitle}"/>
                        <TextBlock Text="{DynamicResource Setup.Welcome.Subtitle}" Style="{StaticResource PageSubtitle}"/>

                        <Border Background="{DynamicResource BgCard}"
                                BorderBrush="{DynamicResource BorderDefault}" BorderThickness="1"
                                CornerRadius="8" Padding="24,20" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,16"
                                           Text="{DynamicResource Setup.Welcome.Desc}"/>
                                <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,8"
                                           Text="{DynamicResource Setup.Welcome.Steps}"/>
                                <TextBlock Style="{StaticResource BodyText}" Margin="16,0,0,4" Text="{DynamicResource Setup.Welcome.Step1}"/>
                                <TextBlock Style="{StaticResource BodyText}" Margin="16,0,0,4" Text="{DynamicResource Setup.Welcome.Step2}"/>
                                <TextBlock Style="{StaticResource BodyText}" Margin="0,16,0,0" Foreground="{DynamicResource TextTertiary}" FontSize="13"
                                           Text="{DynamicResource Setup.Welcome.Note}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </TabItem>

            <!-- Page 2: Engine Detection -->
            <TabItem>
                <Border Padding="50,40">
                    <StackPanel VerticalAlignment="Top">
                        <TextBlock Text="{DynamicResource Setup.Engine.Title}" Style="{StaticResource PageTitle}"/>
                        <TextBlock Text="{DynamicResource Setup.Engine.Subtitle}" Style="{StaticResource PageSubtitle}"/>

                        <Border Background="{DynamicResource BgCard}"
                                BorderBrush="{DynamicResource BorderDefault}" BorderThickness="1"
                                CornerRadius="8" Padding="24,20" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock x:Name="EngineStatusLabel" Text="{DynamicResource Setup.Engine.Searching}" Style="{StaticResource StatusLabel}" FontSize="15"/>
                                <ProgressBar x:Name="EngineProgressBar"
                                             IsIndeterminate="True"
                                             Height="6"
                                             Margin="0,12,0,12"
                                             BorderThickness="0"/>
                                <TextBlock x:Name="EnginePathLabel" Text="" Style="{StaticResource StatusLabel}" FontSize="13"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Button x:Name="LaunchEngineButton"
                                    Content="{DynamicResource Setup.Engine.Launch}"
                                    Style="{StaticResource SecondaryButton}"
                                    Click="LaunchEngineButton_Click"
                                    Margin="0,0,10,0"
                                    Visibility="Collapsed"/>
                            <Button x:Name="RetryDetectionButton"
                                    Content="{DynamicResource Setup.Engine.Retry}"
                                    Style="{StaticResource SecondaryButton}"
                                    Click="RetryDetectionButton_Click"
                                    Margin="0,0,10,0"
                                    Visibility="Collapsed"/>
                            <Button x:Name="ManualSetupButton"
                                    Content="{DynamicResource Setup.Engine.Manual}"
                                    Style="{StaticResource SecondaryButton}"
                                    Click="ManualSetupButton_Click"
                                    Visibility="Collapsed"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </TabItem>

            <!-- Page 3: Speaker Selection -->
            <TabItem>
                <Border Padding="50,40">
                    <StackPanel VerticalAlignment="Top">
                        <TextBlock Text="{DynamicResource Setup.Speaker.Title}" Style="{StaticResource PageTitle}"/>
                        <TextBlock Text="{DynamicResource Setup.Speaker.Subtitle}" Style="{StaticResource PageSubtitle}"/>

                        <Border Background="{DynamicResource BgCard}"
                                BorderBrush="{DynamicResource BorderDefault}" BorderThickness="1"
                                CornerRadius="8" Padding="24,20" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock x:Name="SpeakerStatusLabel" Text="{DynamicResource Setup.Speaker.Loading}" Style="{StaticResource StatusLabel}" FontSize="15"/>
                                <ProgressBar x:Name="SpeakerProgressBar"
                                             IsIndeterminate="True"
                                             Height="6"
                                             Margin="0,12,0,12"
                                             BorderThickness="0"/>

                                <Border x:Name="SpeakerResultPanel"
                                        Background="{DynamicResource BgSecondary}"
                                        BorderBrush="{DynamicResource BorderDefault}" BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="20,16"
                                        Margin="0,8,0,0"
                                        Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock Text="{DynamicResource Setup.Speaker.Detected}" Foreground="{DynamicResource TextTertiary}" FontSize="12" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="SpeakerNameLabel"
                                                   Text=""
                                                   Foreground="{DynamicResource TextPrimary}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock x:Name="SpeakerIdLabel"
                                                   Text=""
                                                   Foreground="{DynamicResource TextTertiary}"
                                                   FontSize="13"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </TabItem>

            <!-- Page 4: Completion -->
            <TabItem>
                <Border Padding="50,40">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{DynamicResource Setup.Complete.Title}" Style="{StaticResource PageTitle}" HorizontalAlignment="Center"/>

                        <Border Background="{DynamicResource BgCard}"
                                BorderBrush="{DynamicResource BorderDefault}" BorderThickness="1"
                                CornerRadius="8" Padding="40,32" Margin="0,16,0,0">
                            <StackPanel HorizontalAlignment="Center">
                                <Ellipse Width="64" Height="64" Fill="{DynamicResource Success}" HorizontalAlignment="Center" Margin="0,0,0,16">
                                </Ellipse>
                                <TextBlock Text="{DynamicResource Setup.Complete.Desc}"
                                           Foreground="{DynamicResource TextPrimary}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,12"/>
                                <TextBlock Text="{DynamicResource Setup.Complete.Ready}"
                                           Foreground="{DynamicResource TextSecondary}"
                                           FontSize="14"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="{DynamicResource Setup.Complete.Hint}"
                                           Foreground="{DynamicResource TextSecondary}"
                                           FontSize="14"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Navigation Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource BgSecondary}"
                BorderBrush="{DynamicResource BorderDefault}" BorderThickness="0,1,0,0"
                Padding="30,14">
            <Grid>
                <Button x:Name="CancelButton"
                        Content="{DynamicResource Common.Cancel}"
                        Style="{StaticResource SecondaryButton}"
                        Click="CancelButton_Click"
                        HorizontalAlignment="Left"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BackButton"
                            Content="{DynamicResource Setup.Back}"
                            Style="{StaticResource SecondaryButton}"
                            Click="BackButton_Click"
                            Margin="0,0,10,0"
                            Visibility="Collapsed"/>
                    <Button x:Name="NextButton"
                            Content="{DynamicResource Setup.Next}"
                            Style="{StaticResource WizardButton}"
                            Click="NextButton_Click"/>
                    <Button x:Name="FinishButton"
                            Content="{DynamicResource Setup.Finish}"
                            Style="{StaticResource WizardButton}"
                            Click="FinishButton_Click"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
